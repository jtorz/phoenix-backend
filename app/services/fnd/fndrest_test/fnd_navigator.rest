GET {{app-host}}/api/foundation/navigators
Content-Type: application/json
Authorization: {{Authorization}}

{
    "limit": 1,
    "offset": 2,
    "sort": ["+Name"],
    "filter":{
        "$and":[
            {"Name":{"$nilike":"something%"}},
            {"Icon":"hey"}
        ]
    }
}